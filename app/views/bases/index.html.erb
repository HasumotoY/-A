<% provide(:title,"拠点一覧") %>
<% provide(:class_text,"base-new") %>
<% provide(:button_text,"追加") %>

<h1>拠点一覧</h1>

<div class= "col-md-10 col-md-offset-1">
  <table class="table table-condenced table-bordered table-striped" id="bases-table">
    <thead>
      <tr>
        <td></td>
        <td></td>
        <td>拠点番号</td>
        <td>拠点名</td>
        <td>勤怠種類</td>
      </tr>
    </thead>
    <tbody>
      <% @bases.each do |base| %>
        <tr>
          <td><%= link_to "修正",edit_basis_path(base),class:"btn btn-primary" %></td>
          <td><%= link_to "削除",base,method: :delete,
                   data:{confirm: "削除してもよろしいですか？"},class:"btn btn-primary" %></td>
          <td><%= base.base_number %></td>
          <td><%= base.name %></td>
          <td><%= base.bases_status %></td>
        </tr>
      <% end %>
    </tbody>
    </table>
   
    <table>
    <tbody>
      <tr>
        <td>
          <%= link_to "追加", new_basis_path,class: "btn btn-primary btn-lg" %>
        </td>
      </tr>
    </tbody>
  </table>
</div>
