<% provide(:title,"勤怠ログ") %>
<h1>勤怠ログ</h1>

<div class="col-md-10 col-md-offset-1">  
  <table class="table table-condenced table-bordered table-striped" id="work-log-table">
    <thead>
      <button type="button" class="btn btn-default" >
                  リセット
      </button>
      <%= form_with(model: @attendance, method: :get, local: true) do |f| %>
        <tr>
          <td>
          年
            <select class="form-control">
              <option value="2019">2021</option>
              <option value="2018">2020</option>
              <option value="2017" selected >2019</option>
              <option value="2016">2018</option>
              <option value="2015">2017</option>
            </select>
          </td>
        </tr>
        <tr>
          <td>
          <%= f.label :worked_on %>
          <%= f.number_field :worked_on %>  
          </td>
        </tr>
      <% end %>
    </thead>
    
    <tbody>
      <tr>
        <td>日付</td>
        <td>変更前出社時間</td>
        <td>変更前退社時間</td>
        <td>変更後出社時間</td>
        <td>変更後退社時間</td>
        <td>指示者</td>
        <td>承認日</td>
      </tr>
      
      <tr>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
      </tr>
    </tbody>
  </table>
</div>