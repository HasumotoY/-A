.modal-dialog.modal-lg.modal-dialog-center
  .modal-content
    .modal-header
      %button.close{"aria-hidden" => "Close", "data-dismiss" => "modal", :type => "button"}
        %span{"aria-hidden" => "true"} ×
      %h1.modal-title
        【#{@user.name}からの勤怠変更申請】
    .modal-body
      = form_with(model: @attendance, url: update_notice_one_month_user_attendance_path(date: @first_day), local:true, method: :patch) do |f|
        %table#modal-teble.table.table-condenced.table-bordered.table-striped
          %thead
            %tr
              %td{:rowspan => "3"} 日付
              %td{:rowspan => "3"} 曜日
              %td{:colspan => "4"} 変更前
              %td{:colspan => "4"} 変更後
              %td{:rowspan => "3"} 備考
              %td{:rowspan => "3"} 支持者確認㊞
              %td{:rowspan => "3"} 変更
              %td{:rowspan => "3"} 勤怠を確認する
            %tr
              %td{:colspan => "2"} 出社
              %td{:colspan => "2"} 退社
              %td{:colspan => "2"} 出社
              %td{:colspan => "2"} 退社
            %tr
              %td 時
              %td 分
              %td 時
              %td 分
              %td 時
              %td 分
              %td 時
              %td 分
          %tbody
            %tr
              %td= l( @attendance.worked_on, format: :short)
              %td
                - if @attendance.worked_on.wday == 6
                  %font{:color => "blue"} 土
                - elsif @attendance.worked_on.wday == 0
                  %font{:color => "red"} 日
                - else
                  = $days_of_the_week[@attendance.worked_on.wday]
              - if @attendance.started_at_changed? && @attendance.finished_at_changed?
                %td= l(@attendance.started_at_was, format: :hour)
                %td= l(@attendance.started_at_was, format: :min)
                %td= l(@attendance.finished_at_was, format: :hour)
                %td= l(@attendance.finished_at_was, format: :min)
              - else
                %td
                %td
                %td
                %td
              %td= l(@attendance.started_at, format: :hour)
              %td= l(@attendance.started_at, format: :min)
              %td= l(@attendance.finished_at, format: :hour)
              %td= l(@attendance.finished_at, format: :min)
              %td= @attendance.note
              %td= f.select :one_month_approval, ["なし","申請中","承認","否認"], {include_blank: true}, prompt: true, class: "form-control"
              %td= f.check_box :one_month_change
              %td= link_to "確認",user_path(@user), class: "btn btn-primary"
        .center
          = f.submit "変更を送信する",class:"btn btn-primary"
