<h1>出勤社員一覧</h1>

<table class="table table-condenced table-striped">
  <thead>
    <tr>
      <td>社員番号</td>
      <td>名前</td>
    </tr>
  </thead>
    
    <tbody>
      <% @atetndances.each do |day| %>
      <tr>
        <td>
          <%= user.employee_number if day.started_at.present? && day.finished_at.nil? %>
        </td>
        <td>
          <%= user.name  if day.started_at.present? && day.finished_at.nil? %>
        </td>
      </tr>  
  <% end %>
  </tbody>  
  
</table>
