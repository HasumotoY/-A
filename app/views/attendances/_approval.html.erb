<%= form_with(model: @attendances, url: update_approval_user_attendance_path(@user,@attendances), local: true, method: :patch) do |f| %>
          <td colspan="3">在社時間合計</td>
        <td colspan="8">
          <%= format("%.2f",@total_working_times.to_f) %>
        </td>
        <td colspan="3">総合勤務時間</td>  
        <td colspan="3"><%= format_basic_info(@user.basic_work_time).to_f*@worked_sum %></td>
        <td rowspan="2">
          <% if current_user?(@user) %>
          <% @users.each do |user| %> %>
    <% attendance = user.attendances.where(user_id: user.id) %>
      <% attendance.each do |at| %>
      <% if at.instructor.to_i == user.id && at.instructor.nil? %>
        <p>所属長承認</p><p><%= at.approval %></p>
    <% break %>
      <% elsif at.instructor.present? %>
        <p>所属長承認　未</p>
      <% end %>
    <% break %>
  <br><%= f.collection_select :instructor ,User.where(superior: true), :id, :name, {include_blank: true},prompt: true, class: "form-control" %>
  <br><%= f.submit "申請",class: "btn btn-primary btn-block btn-attendance" %>
    <% end %>
  <% end %>
<% end %>  