<% provide(:title,"勤怠修正ログ(承認済み)") %>
<h1>勤怠修正ログ(承認済み)</h1>
<div>
  <button class="btn btn-default" type="button" id="reset">リセット</button>
</div>

<div class="input-group" id="year">
  <select name="year" class="year-form form-control">
    <% @year.reverse_each do |year| %>
      <option id=<%= year %>>
        <%= year %>  
      </option>
    <% end %>  
  </select>
</div>
<div class="input-group" id="month">
  <select name="month" class="month-form form-control">
    <% @month.each do |month| %>
      <option id=<%= month %>>
        <%= month %>  
      </option>
    <% end %>  
  </select>
</div>

<div class="table-resposible">
  <table class= "table table-bordered table-striped">
    <thead>
      <tr>
        <th>日付</th>
        <th>変更前出社時間</th>
        <th>変更前退社時間</th>
        <th>変更後出社時間</th>
        <th>変更後退社時間</th>
        <th>承認者</th>
        <th>承認日</th>
      </tr>
    </thead>
    <tbody>
      
    </tbody>
  </table>
</div>