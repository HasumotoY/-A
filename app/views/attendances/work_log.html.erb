<% provide(:title,"勤怠ログ") %>
<h1>勤怠ログ</h1>

<div class="col-md-10 col-md-offset-1">  
  <table class="table table-condenced table-bordered table-striped" id="work-log-table">
    <thead>
      <button type="button" class="btn btn-default" >
                  リセット
      </button>
      <%= form_with(model: @user, url: attendances_search_work_log_user_path, method: :get, local: true) do |f| %>
        <tr>
          <td>
          年
            <%= f.collection_select :worked_on, Attendance.group(:worked_on), :worked_on, :worked_on,{prompt: ""} %>
          </td>
        </tr>
        <tr>
          <td>
          月
          <%= f.collection_select :worked_on, Attendance.group(:worked_on), :worked_on, :worked_on,{prompt: ""} %>
          </td>
        </tr>
      <% end %>
    </thead>
    
    <tbody>
      <tr>
        <td>日付</td>
        <td>変更前出社時間</td>
        <td>変更前退社時間</td>
        <td>変更後出社時間</td>
        <td>変更後退社時間</td>
        <td>指示者</td>
        <td>承認日</td>
      </tr>
      <% @attendances.each do |attenadance| %>
      <% if attendance.one_month_approval.present? %> 
      <tr>
        <td><%= l(attendance.worked_on, format: :short) %></td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <% end %>
        <% end %>
      </tr>
    </tbody>
  </table>
</div>