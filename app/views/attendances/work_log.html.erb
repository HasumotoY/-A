<% provide(:title,"勤怠ログ") %>

<h1>勤怠ログ</h1>

<div class="col-md-10 col-md-offset-1">  
  <table class="table table-condenced table-bordered table-striped" id="work-log-table">
    <thead>
      <button type="button" class="btn btn-default" >
                  リセット
      </button>
      <%= form_with(model: @attendances, url: attendances_work_log_user_path(@user,@attendances), method: :get, local: true) do |f| %>
        <tr>
          
          <td>
            <div class="input-group mb-2">
              <span class="input-group-prepend">
                <button type="button" class="btn btn-default dropdown-toggle"
                  data-toggle="dropdown">
                    年
                <span class="caret"></span>
                </button>
                    
                <div class="dropdown-menu">
                  <ul>
                    <li class="drop-list"><a href="#"><%= Date.current.prev_year(2).year %></a></li>
                    <li class="drop-list"><a href="#"><%= Date.current.prev_year.year %></a></li>
                    <li class="drop-list"><a href="#"><%= Date.current.year %></a>  </li>
                  </ul>
                  
                </div>
              </span>
              <input type="text" placeholder="<%= Date.current.year %>" class="form-control" readonly >
            </div>
          </td>
        </tr>
        <tr>
          <td>
          <span>月</span>
          <span><%= f.collection_select :worked_on, Attendance.group(:worked_on), :worked_on, :worked_on,{prompt: ""} %></span>
          </td>
        </tr>
      <% end %>
    </thead>
    
    <tbody>
      <tr>
        <td>日付</td>
        <td>変更前出社時間</td>
        <td>変更前退社時間</td>
        <td>変更後出社時間</td>
        <td>変更後退社時間</td>
        <td>指示者</td>
        <td>承認日</td>
      </tr>
      <% @attendances.each do |attendance| %>
      <% if attendance.one_month_approval.present? %> 
      <tr>
        <td><%= l(attendance.worked_on, format: :short) %></td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <% end %>
        <% end %>
      </tr>
    </tbody>
  </table>
</div>