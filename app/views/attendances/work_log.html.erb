<% provide(:title,"勤怠ログ") %>
<h1>勤怠ログ</h1>

<div class="col-md-10 col-md-offset-1">  
  <table class="table table-condenced table-bordered table-striped work-log-table">
    <thead>
      <input class="btn btn-default" type="reset"  value="リセット" >
        <tr>
          <td>
            <div class="input-group" id="year">
              <span class="input-group-btn">
                <button type="button" class="btn btn-default dropdown-toggle"
                  data-toggle="dropdown">
                    年
                <span class="caret"></span>
                </button>
                <ul class="dropdown-menu" role="menu">
                  <a id = "<%= Date.current.year %>",class="dropdown-item", href="#"><%= Date.current.year %></a>
                  <a id = "<%= Date.current.prev_year.year %>",class="dropdown-item",href="#"><%= Date.current.prev_year.year %></a>
                  <a id = "<%= Date.current.prev_year(2).year %>",class="dropdown-item",href="#"><%= Date.current.prev_year(2).year %></a>
                </ul>
              </span>
              <%=  form_with(url: attendances_work_log_user_path(@user,@attendances),method: :get,local: true,class: "form-control") do |f| %>
                <%= f.text_field :worked_on,id: "#{Date.current.year}",readonly: true%>
                <% end %>
            </div>
            <script>
              
            </script>
          </td>
        </tr>
        <tr>
          <td>
            <div class="input-group" id="month">
              <span class="input-group-btn">
                <button type="button" class="btn btn-default dropdown-toggle"
                  data-toggle="dropdown">
                    月
                <span class="caret"></span>
                </button>
                <ul class="dropdown-menu" role="dropdown-menu">
                  <% @month.each do |month| %>
                    <li id = "<%= month %>",value="<%= month %>"><a href="#"><%= month %></a></li>
                  <% end %>
                </ul>
              </span>
              <% @attendances.each do |attendance| %>
                <input type="text" placeholder="<%= attendance.worked_on.month %>",selected = "<%= attendance.worked_on.month %>", class="form-control" readonly >
              <% break %>
              <% end %>
            </div>
          </td>
        </tr>
    </theaed>
  </table>
</div>
      
<div class="col-md-10 col-md-offset-1 table-responsive">
  <table class="table table-condenced table-bordered table-striped">
    <tbody>
      <tr>
        <td>日付</td>
        <td>変更前出社時間</td>
        <td>変更前退社時間</td>
        <td>変更後出社時間</td>
        <td>変更後退社時間</td>
        <td>指示者</td>
        <td>承認日</td>
      </tr>
    </tbody>
  </table>
</div>