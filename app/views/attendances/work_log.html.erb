<% provide(:title,"勤怠ログ") %>

<h1>勤怠ログ</h1>

<div class="col-md-10 col-md-offset-1">  
  <table class="table table-condenced table-bordered table-striped" id="work-log-table">
    <thead>
      <button type="button" class="btn btn-default" >
                  リセット
      </button>
      <%= form_with(model: @attendances, url: attendances_work_log_user_path(@user,@attendances), method: :get, local: true) do |f| %>
        <tr>
          
          <td>
            <div class="input-group" id="year">
              <span class="input-group-btn">
                <button type="button" class="btn btn-default dropdown-toggle"
                  data-toggle="dropdown">
                    年
                <span class="caret"></span>
                </button>
                <ul class="dropdown-menu">
                    <li id = "<%= Date.current.prev_year(2).year %>"><a href="#"><%= Date.current.prev_year(2).year %></a></li>
                    <li id = "<%= Date.current.prev_year.year %>"><a href="#"><%= Date.current.prev_year.year %></a></li>
                    <li id = "<%= Date.current.year %>"><a href="#"><%= Date.current.year %></a>  </li>
                </ul>
              </span>
                <input type="text" placeholder="<%= Date.current.year %>" class="form-control" readonly >
            </div>
          </td>
        </tr>
        <tr>
          <td>
            <div class="input-group" id="month">
              <span class="input-group-btn">
                <button type="button" class="btn btn-default dropdown-toggle"
                  data-toggle="dropdown">
                    年
                <span class="caret"></span>
                </button>
                <ul class="dropdown-menu">
                  <% @month.each do |month| %>
                    <li id = "<%= month %>"><a href="#"><%= month %></a></li>
                  <% end %>
                </ul>
              </span>
                <input type="text" placeholder="<%= Date.current.month %>" class="form-control" readonly >
            </div>
          </td>
        </tr>
      <% end %>
    </thead>
    
    <tbody>
      <tr>
        <td>日付</td>
        <td>変更前出社時間</td>
        <td>変更前退社時間</td>
        <td>変更後出社時間</td>
        <td>変更後退社時間</td>
        <td>指示者</td>
        <td>承認日</td>
      </tr>
      <% @attendances.each do |attendance| %>
      <% if attendance.one_month_approval.present? %> 
      <tr>
        <td><%= l(attendance.worked_on, format: :short) %></td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <% end %>
        <% end %>
      </tr>
    </tbody>
  </table>
</div>